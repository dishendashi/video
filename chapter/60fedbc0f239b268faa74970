RunOnReady(function() {
    $('#loginform').on('login', function (event, usr) {
        $('#LoginRegiterModal').modal('hide');
        if (homagingId) {
            Homage(homagingId);
            delete homagingId;
        }
        if (floweringId) {
            Flower(floweringId);
            delete floweringId;
        }
        event.stopImmediatePropagation();
    });

    $.get('/counter/homage/60fbbd1ff9ae424354adfe8c', function(result) {
        if (result.success) {
            $('#homageNo').html(result.homage);
            $('#flowerNo').html(result.flower);
        }
    })
});

