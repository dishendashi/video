RunOnReady(function() {
    $('#loginform').on('login', function (event, usr) {
        $('#LoginRegiterModal').modal('hide');
        if (homagingId) {
            Homage(homagingId);
            delete homagingId;
        }
        if (floweringId) {
            Flower(floweringId);
            delete floweringId;
        }
        event.stopImmediatePropagation();
    });

    $.get('/counter/homage/60a1e8eb629cab7e44f1a5ae', function(result) {
        if (result.success) {
            $('#homageNo').html(result.homage);
            $('#flowerNo').html(result.flower);
        }
    })
});

