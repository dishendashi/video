            Flower(floweringId);
            delete floweringId;
        }
        event.stopImmediatePropagation();
    });

    $.get('/counter/homage/60dacb4ea4ff006c3597257f', function(result) {
        if (result.success) {
            $('#homageNo').html(result.homage);
            $('#flowerNo').html(result.flower);
        }
    })
});

